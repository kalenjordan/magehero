<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <link rel="stylesheet" type="text/css" href="/skin/css/app.css?v=1" media="all" />
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/skin/css/tooltipster.css" />
        <link rel="stylesheet" type="text/css" href="/skin/css/chosen.css" />
        <title>
            {% block title %}MageHero | Awesome Magento Developers{% endblock %}
        </title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script type="text/javascript" src="/js/jquery.tooltipster.js"></script>
        <script type="text/javascript" src="/js/chosen.jquery.js"></script>
        <script type="text/javascript" src="/js/jquery.tablesorter.min.js"></script>
        <script type="text/javascript" src="/epiceditor/js/epiceditor.min.js"></script>
        <script type="text/javascript" src="/js/app.js"></script>
        {% block additional_head %} {% endblock %}
    {% endblock %}
</head>
<body>
{% if local_config.getHellobarEnabled() %}
    <div class="hellobar">
        <div class="hellobar-inner">
            <a href="{{ local_config.getHellobarUrl() }}">{{ local_config.getHellobarMessage() }}</a>
        </div>
    </div>
{% endif %}


<div class="wrapper">
    <div class="account">
        {% if session.github_username %}
            <a href="/profile" class="tooltip" title="Edit your profile"><i class="fa fa-user"></i> {{ session.github_username }}</a>
            <a href="/posts/new" class="tooltip" title="Write a post"><i class="fa fa-pencil-square-o"></i> Post</a>
            <a href="/logout" class="tooltip" title="Peace out"><i class="fa fa-sign-out"></i> Log Out</a>
        {% else %}
            <a href="/login"><i class="fa fa-sign-in"></i> Login</a>
        {% endif %}
    </div>
    {% block masthead %}
        <div class="masthead">
            <h1><a href="/" class="tooltip" title="Awesome Magento Developers">MageHero</a></h1>
        </div>
    {% endblock %}

    <div class="content">
        {% block content %} {% endblock %}
    </div>
</div>
<div class="footer">
    <a href="/map">Map</a>
    | <a href="/users">Developers</a>
    | <a href="https://github.com/kalenjordan/magedevs#frequently-asked-questions">Frequently asked questions</a>
    | <a href="/feed">Feed</a>
</div>

<script>
    $(document).ready(function() {
        $('.tooltip').tooltipster({
            delay: 0
        });
    });
</script>

{% if local_config.getGoogleAnalyticsUa() %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '{{ local_config.getGoogleAnalyticsUa() }}', 'auto');
        ga('send', 'pageview');
    </script>
{% endif %}

</body>
</html>
