<!DOCTYPE html>
{% if session.github_username %}
<html class="logged-in">
{% else %}
<html>
{% endif %}
<head>
    {% block head %}
        <link rel="stylesheet" type="text/css" href="/skin/css/styles.css?v=1" media="all" />
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400,300,700' rel='stylesheet' type='text/css'>
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/skin/css/tooltipster.css" />
        <title>
            {% block title %}MageHero | Awesome Magento Developers{% endblock %}
        </title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        {% block additional_head %} {% endblock %}
		 <meta name="description" content="Latest news from Magento developers across the globe." />
		 <meta name="robots" content="index,follow">
        <!-- commenting out for now - this needs to be updated for post url's
		 <link rel="canonical" href="http://magehero.com" />
		 -->
        <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
    {% endblock %}
</head>
<body class="{{ body_class }}">
{% if local_config.getHellobarEnabled() %}
    <div class="hellobar">
        <div class="hellobar-inner">
            <a href="{{ local_config.getHellobarUrl() }}">{{ local_config.getHellobarMessage() }}</a>
        </div>
    </div>
{% endif %}

{% block pre_header %}
    <!-- Nothing here.  Can be overridden -->
{% endblock %}

<div class="wrapper">
    <div class="search">
        <a href="/search"><i class="fa fa-search"></i></a>
        <form class="search-form" action="/search" method="GET">
            <input type="text" name="query" value="{{ search_query }}" placeholder="Search Posts...">
        </form>
    </div>
    <div class="account">
        {% if session.github_username %}
            {%  if session.image_url %}
                <div class="image-wrapper user-thumbnail">
                    <a href="/profile">
                        <img src="{{ session.image_url }}" >
                    </a>
                </div>
            {% endif %}
            <a href="/profile" class="tooltip" title="Edit your profile">{{ session.github_username }}</a>
            <a href="/posts/new" class="tooltip" title="Write a post">Post</a>
            <a href="/logout" class="tooltip" title="Peace out">Log Out</a>
        {% else %}
            <a href="/login">Login</a>
        {% endif %}
    </div>
    {% block masthead %}
        <div class="masthead">
            <h1><a href="/" title="Awesome Magento Developers">Mage<i class="fa fa-shield"></i>Hero</a></h1>
            <p>Celebrating the work of Magento developers, the world over.</p>
        </div>
    {% endblock %}

    <div class="content">
        {% block content %} {% endblock %}
    </div>
</div>
<div class="footer">
    <a href="/map">Map</a>
    | <a href="/users">Developers</a>
    | <a href="https://github.com/kalenjordan/magedevs#frequently-asked-questions">Frequently asked questions</a>
    | <a href="/feed">Feed</a>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script type="text/javascript" src="/epiceditor/js/epiceditor.min.js"></script>
<script type="text/javascript" src="/skin/js/jquery.tooltipster.min.js"></script>
<script type="text/javascript" src="/skin/js/main.min.js"></script>

{% if local_config.getGoogleAnalyticsUa() %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '{{ local_config.getGoogleAnalyticsUa() }}', 'auto');
        ga('send', 'pageview');
    </script>
{% endif %}

{% block before_body_end %}
{% endblock %}
</body>
</html>
